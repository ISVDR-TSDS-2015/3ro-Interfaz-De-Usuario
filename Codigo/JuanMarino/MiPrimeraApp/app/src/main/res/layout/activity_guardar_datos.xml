<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.javierpintosettlin.miprimeraapp.GuardarDatos"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Datos"
            android:onClick="BtnGuardarDatos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Datos"
            android:onClick="mostrarDatosAlmacenados" />

        <TextView
            android:id="@+id/lblMostrarTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Archivo"
        android:onClick="Guardararchivointerno"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Archivointerno"
            android:onClick="ArchivoInterno" />

    <TextView
        android:id="@+id/lblMostrarArchivoInterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="texto"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar SQLLite"
            android:onClick="guardarSQLite" />



        <TextView
            android:id="@+id/lblMostrarSQLLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="texto"/>
    </LinearLayout>

</LinearLayout>
